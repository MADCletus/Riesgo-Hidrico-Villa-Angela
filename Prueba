<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mapa de Riesgo Hídrico</title>
  <style>
    /* Estilo básico para el mapa */
    #map {
      height: 600px;
      width: 100%;
    }
  </style>
  <!-- Cargar la API de Google Maps -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDxaqdAkj5OZSbiim2oxydQAXsxfDOvl7k"></script>
  <script>
    function initMap() {
      // Crear el mapa centrado en una ubicación específica
      var map = new google.maps.Map(document.getElementById('map'), {
        zoom: 10,
        center: {lat: -27.569591091468123, lng: -60.709673623075524} // Villa Ángela, Chaco
      });

      // Cargar los archivos GeoJSON
      map.data.loadGeoJson('https://madcletus.github.io/Riesgo-Hidrico-Villa-Angela/Catastro.json'); // Catastro.json
      map.data.loadGeoJson('https://madcletus.github.io/Riesgo-Hidrico-Villa-Angela/Zonificacion.json'); // Zonificación.json

      // Aplicar estilos personalizados según la propiedad 'riesgo'
      map.data.setStyle(function(feature) {
        var color = 'transparent'; // Color por defecto (transparente para riesgo leve)
        var riesgo = feature.getProperty('riesgo');

        if (riesgo === 'Severa') {
          color = 'red'; // Rojo para riesgo severo
        } else if (riesgo === 'Alta') {
          color = 'yellow'; // Amarillo para riesgo alto
        } else if (riesgo === 'Moderada') {
          color = 'green'; // Verde para riesgo moderado
        } else if (riesgo === 'Leve') {
          color = 'transparent'; // Transparente o blanco para riesgo leve
        }

        return {
          fillColor: color,
          fillOpacity: 0.6, // Ajusta la opacidad del relleno si es necesario
          strokeColor: '#000000', // Color del borde
          strokeWeight: 1 // Grosor del borde
        };
      });
    }
  </script>
</head>
<body onload="initMap()">
  <h1>Mapa de Riesgo Hídrico</h1>
  <div id="map"></div> <!-- Este div contiene el mapa -->
</body>
</html>
